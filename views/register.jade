extends layout

block content
  .container
    h1 Register
    p.lead Please provide your information to create an account
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
          input.form-control(type='text', name="email", placeholder='Email Address')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      .form-group
          input.form-control(type='text', name="first_name", placeholder='First Name')
      .form-group
          input.form-control(type='text', name="last_name", placeholder='Last Name')
      .form-group
          input.form-control(type='text', name="contact_phone", placeholder='Phone Number')
      .form-group
          input.form-control(type='text', name="pin", placeholder='Pin')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel